# Example environment configuration for Epocheye Website
# Copy this file to .env.local and update values as needed

# Backend API URL (REST endpoints)
# For local development: http://localhost:8080
# For production: https://epocheye-backend.onrender.com
NEXT_PUBLIC_API_URL=https://epocheye-backend.onrender.com

# WebSocket URL (real-time notifications)
# For local development: ws://localhost:8080
# For production: wss://epocheye-backend.onrender.com
NEXT_PUBLIC_WS_URL=wss://epocheye-backend.onrender.com

# Frontend Site URL (for SEO and metadata)
NEXT_PUBLIC_SITE_URL=https://epocheye.app
